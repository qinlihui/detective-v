<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", "jquery.rails.js" %>
<div class="row">
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <form method="GET">
            <%= select_tag "severity", options_for_select(["Severity Level","High","Medium","Low"], selected_severity_level) %>
            <%= select_tag "sources", options_for_select(@last_scan_source), #Unfinished =>
            <input type="submit" value="Apply filter"></input>
        </form>

            <h2><%= @Issues.count %> Issues Found for <%= @repository.name %><span style="color:grey;padding: 20px;">on <%= @last_scan.created_at.strftime("%l:%M %p %B %-d,  %Y") %></span></h2>
            <div class="Issue-block" style="background-color: grey">
                <table class="table Issue-table" style="background-color: white;overflow:auto;">
                    <thead>
                        <tr>
                            <th>Source</th>
                            <th>Severity</th>
                            <th>Description</th>
                            <th>Detail</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @issues.each do |issue| %>
                            <tr>
                                <td><%= issue.source %></td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-<%= class_for_severity(issue.severity) %>" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"
                                        style="width:<%= issue.severity * 10 %>%">
                                            <%= issue.severity %>
                                    </div>
                                </td>
                                <td><%= issue.description %></td>
                                <td><%= issue.detail %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>

    </div>
</div>